{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "sourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "declaration": false,
    "composite": false,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": false,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*"
  ]
}